<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/noteItemLayoutParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="14dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/ivoryWhite"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/noteItemTitle"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:padding="5dp"
                    android:ellipsize="end"
                    android:text="Note Title"
                    android:textColor="@color/brown"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/noteContentItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/noteItemTitle"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="3dp"
                    android:ellipsize="end"
                    android:maxLines="12"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:text="@string/note_sample_content" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/noteItemDate"
                    android:layout_below="@id/noteContentItem"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:padding="5dp"
                    android:drawableStart="@drawable/calendar_icon"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:text="dd-mm-yyyy"
                    android:layout_alignParentEnd="true"
                    app:drawableTint="@color/brown"
                    android:textColor="@color/brown"
                    android:textSize="12sp"
                    android:textAlignment="textStart" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


</layout>