<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/thirdColor">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/displayLayout"
                    android:background="@drawable/settings_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="40dp"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customize"
                        android:textSize="18sp"
                        android:textColor="#FFF"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/nightModeIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/account_sync"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/nightModeIcon"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cover_mode"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/coverImageIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/notification_reminder"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/coverImageIcon"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/upgradeLayout"
                    android:background="@drawable/settings_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="40dp"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="@string/upgrade_app"
                        android:textColor="#FFF"
                        />

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/upgradeAppIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/check_for_updates"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/upgradeAppIcon"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/proVersionLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/proVersionIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/pro_version"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/proVersionIcon"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/donateLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/donateIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/donate"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/donateIcon"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/settings_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="40dp"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date - Time"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        />

                    <RelativeLayout
                        android:id="@+id/firstDayOfWeekLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/firstDayOfWeekIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="7dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/first_day_of_week"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/firstDayOfWeekIcon"
                            />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/selectTimeLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/timeFormatIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="7dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/time_format"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/timeFormatIcon"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/selectDateLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/dateFormatIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="7dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/date_format"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/dateFormatIcon"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/settings_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        />

                    <RelativeLayout
                        android:id="@+id/languageLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/languageIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="7dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/language"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/languageIcon"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/translateLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/translateIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="7dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/help_us_translate"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/translateIcon" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/faqLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/faqIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="7dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/faq"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/faqIcon" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rateUsLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/rateUsIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="7dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/rate_us"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/rateUsIcon"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/shareAppLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/shareAppIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="7dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/share_app"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/shareAppIcon" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/feedbackLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/feedbackIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="7dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/feedback"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/feedbackIcon"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/privacyPolicyLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/privacyPolicyIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="7dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/privacy_policy"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/privacyPolicyIcon" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/versionLayout"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/versionIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="7dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/version_1_0_0"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/versionIcon" />

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>



        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>